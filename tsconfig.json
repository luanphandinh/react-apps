{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "*": ["*"],
      "apps/*": ["apps/*"],
      "movie-app/*": ["apps/movie-app/*"],
      "lupa/*": ["lupa/*"],
    },
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es6",
    "jsx": "react",
    "types": [
      "node",
    ],
    "typeRoots": [
      "node_modules/@types/"
    ]
  },
  "include": [
    "./src/**/*"
  ]
}
